<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sugar Sync"
        android:textSize="24sp"
        android:textColor="#3E007D"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <!-- Blood Level Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textBloodLevelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Level"
                android:textSize="18sp"
                android:textColor="#0E0E0E"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <ProgressBar
                android:id="@+id/progressBloodLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:max="100"
                android:progress="70"
                android:progressDrawable="@drawable/round_progress_blood_level"
                android:layout_marginTop="10dp"
                android:layout_gravity="center" />
        </LinearLayout>



        <!-- Sugar Intake and Exercise Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- Sugar Intake Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textSugarIntakeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sugar Intake"
                android:textSize="18sp"
                android:textColor="#090808"/>
            <ProgressBar
                android:id="@+id/progressSugarIntake"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/round_progress_sugar_intake"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- Exercise Time Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textExerciseTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Time"
                android:textSize="18sp"
                android:textColor="#070707"/>
            <ProgressBar
                android:id="@+id/progressExerciseTime"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/round_progress_exercise_time"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

        <!-- Blood Glucose BarChart Title -->
        <TextView
            android:id="@+id/textBloodGlucoseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Glucose"
            android:textSize="18sp"
            android:textColor="#070707"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <!-- Blood Glucose BarChart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartBloodGlucose"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />

        <!-- Sugar Intake BarChart Title -->
        <TextView
            android:id="@+id/textSugarIntakeTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugar Intake"
            android:textSize="18sp"
            android:textColor="#070707"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <!-- Sugar Intake BarChart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartSugarIntake"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />

        <!-- Exercise BarChart Title -->
        <TextView
            android:id="@+id/textExerciseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:textSize="18sp"
            android:textColor="#070707"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <!-- Exercise BarChart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartExercise"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp" />
</LinearLayout>

</androidx.core.widget.NestedScrollView>

















