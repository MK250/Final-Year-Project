<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/editDiabetesType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diabetes Type"/>


    <EditText
        android:id="@+id/editInsulinTherapy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insulin Therapy"/>


    <EditText
        android:id="@+id/editPills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pills"/>


    <EditText
        android:id="@+id/editUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Units for Blood Sugar"/>


    <EditText
        android:id="@+id/editTargetRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Range"/>

</LinearLayout>
