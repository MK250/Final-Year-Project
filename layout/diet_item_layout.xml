<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/diet_item_layout.xml -->

<!-- diet_item_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/item_border">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Entry: Breakfast -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/breakfastTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Breakfast: "
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Edit and Delete Buttons for Breakfast -->
        <ImageView
            android:id="@+id/imageViewEditBreakfast"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onEditBreakfastClicked" />

        <ImageView
            android:id="@+id/imageViewDeleteBreakfast"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onDeleteBreakfastClicked" />
    </LinearLayout>

    <!-- Entry: Lunch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lunchTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lunch: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Edit and Delete Buttons for Lunch -->
        <ImageView
            android:id="@+id/imageViewEditLunch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onEditLunchClicked" />

        <ImageView
            android:id="@+id/imageViewDeleteLunch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onDeleteLunchClicked" />
    </LinearLayout>

    <!-- Entry: Dinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dinnerTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dinner: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Edit and Delete Buttons for Dinner -->
        <ImageView
            android:id="@+id/imageViewEditDinner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onEditDinnerClicked" />

        <ImageView
            android:id="@+id/imageViewDeleteDinner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="8dp"
            android:onClick="onDeleteDinnerClicked" />
    </LinearLayout>

</LinearLayout>



