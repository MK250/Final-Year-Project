<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/> <!-- Background color when button is pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners for button -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Default background color for button -->
            <corners android:radius="8dp"/> <!-- Rounded corners for button -->
        </shape>
    </item>
</selector>
